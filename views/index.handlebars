<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <h1>Eat-Da-Burger!</h1>
        <h4>Cook Yarselph a Burga! NOM NOM NOM!</h4>
    </div>
</div>

<div class="container">
    <form class="cook-burger-input">
            <p>Cook Da Burger!</p>
            <input type="text" id="burger_name" class="form-control form-control-lg m-2">
            <div class="input-group-append">
                <button id="submit" type="submit" class="btn btn-danger m-2"><i class="fas fa-hamburger"></i> Add New Burger</button>
            </div>
    </form>
</div>

<div class="container">
    {{#each burgers}}
    {{#unless devoured}}
        {{burger_name}}
    {{/unless}}
    {{/each}}
</div>

<div class="container">
    {{#each burgers}}
    {{#if devoured}}
        {{burger_name}}
    {{/if}}
    {{/each}}
</div>